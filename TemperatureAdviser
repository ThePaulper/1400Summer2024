//looks at temp values in celsius and advises 
using System;

public class TemperatureAdviser
  {

    public void Main()
    {
      Console.WriteLine("Please enter the temperature in Celsius");
string temp = Console.ReadLine();
		int temperature = Convert.ToInt32(temp);
      if (temperature < 30) 
      {
        Console.WriteLine("Stay hydrated and avoid prolonged sun exposure!");
      } 
      else 
      {
        Console.WriteLine("Enjoy the Pleasant Weather.");
      }
     }
  }