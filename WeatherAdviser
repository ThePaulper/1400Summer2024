//looks at temp values in celsius and advises based on more conditions
using System;

public class TemperatureAdviser
  {

    public void Main()
    {
      Console.WriteLine("Please enter the temperature in Celsius");
string temp = Console.ReadLine();
		int temperature = Convert.ToInt32(temp);
      if (temperature > 30) 
      {
        Console.WriteLine("Stay hydrated and avoid prolonged sun exposure!");
      } 
      else if (temperature < 10)
      {
        Console.WriteLine("It's cold outside! Remember to dress warmly.");
      }
      else if (temperature > 10 || temperature < 20)
      {
        Console.WriteLine("It's a bit cool out. Consider wearing a light jacket.");
      }
      else 
      {
        Console.WriteLine("Enjoy the Pleasant Weather.");
      }
     }
  }